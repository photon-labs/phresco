<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>${groupId}</groupId>
	<artifactId>${artifactId}</artifactId>
	<version>${version}</version>
	<name>${artifactId}</name>
	<packaging>js</packaging>
	
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <sonar.language>js</sonar.language>
	</properties>
    
    <dependencies>
        <dependency>
          <groupId>junit</groupId>
          <artifactId>junit</artifactId>
          <version>4.7</version>
        </dependency>
  </dependencies>
	
    <build>
		<testSourceDirectory>${project.basedir}/src/test</testSourceDirectory>
        <directory>do_not_checkin/target</directory>
        <finalName>HelloWorld</finalName>
		<extensions>
			<extension>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>javascript-maven-plugin</artifactId>
				<version>1.2.0.7001-SNAPSHOT</version>
			</extension>
		</extensions>
		<sourceDirectory>${phresco.source.directory}</sourceDirectory>	
        <plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
					<executions>
						<execution>
						<id>copy-dependencies</id>
						<phase>package</phase>
							<goals>
								<goal>copy-dependencies</goal>
							</goals>
						<configuration>
							<excludeScope>provided</excludeScope>
							<includeTypes>jar</includeTypes>
							<outputDirectory>do_not_checkin/target/lib</outputDirectory>
						</configuration>
						</execution>
					</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.2-beta-5</version>
				<configuration>
					<descriptors>
						<descriptor>.phresco/war-config.xml</descriptor>
					</descriptors>
				</configuration>
				<executions>
				  <execution>
					<id>create-war</id>
					<phase>package</phase>
					<goals>
						<goal>single</goal>
					</goals>
				  </execution>
				</executions>
			</plugin>
            <plugin>
                <groupId>com.photon.phresco.plugins</groupId>
                <artifactId>java-maven-plugin</artifactId>
                <version>1.2.0.7001-SNAPSHOT</version>
                <extensions>true</extensions>
            </plugin>
            <plugin>
                <groupId>com.googlecode.t7mp</groupId>
                <artifactId>maven-t7-plugin</artifactId>
                <version>0.9.9</version>
                <configuration>
                    <tomcatHttpPort>${server.port}</tomcatHttpPort>
                    <tomcatShutdownPort>${server.shutdown.port}</tomcatShutdownPort>
                    <tomcatShutdownCommand>SHUTDOWN</tomcatShutdownCommand>
                    <tomcatVersion>7.0.6</tomcatVersion>
                    <tomcatSetAwait>true</tomcatSetAwait>
                    <webapps>
                        <webappArtifact>
                            <groupId>${project.groupId}</groupId>
                            <artifactId>${project.artifactId}</artifactId>
                            <version>${project.version}</version>
                            <contextPath>${project.build.finalName}</contextPath>
								</webappArtifact>
							</webapps>
                </configuration>
            </plugin>
            <plugin>
				<groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.11</version>
				<configuration>
					<excludes>
						<exclude>js/**/*Test.java</exclude>
					</excludes>
				</configuration>

				<executions>
					<execution>
						<id>surefire-qunit</id>
						<goals>
							<goal>test</goal>
						</goals>
						<configuration>
							<reportsDirectory>${project.build.directory}/surefire-reports/qunit</reportsDirectory>
							<excludes>
								<exclude>none</exclude>
							</excludes>
							<includes>
								<include>js/**/*Test.java</include>
							</includes>
						</configuration>
					</execution>
				</executions>
			</plugin>
        </plugins>
    </build>
    
    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-report-plugin</artifactId>
                <version>2.8</version>
                <configuration>
                    <skipTests>true</skipTests>
                </configuration>
            </plugin>
        </plugins>
    </reporting>
	<profiles>
        <profile>
            <id>ci</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
		        <plugins>
					<plugin>
						<artifactId>maven-clean-plugin</artifactId>
						<version>2.5</version>
						<executions>
						  <execution>
							<id>default-clean</id>
							<phase>pre-clean</phase>
							<goals>
							  <goal>clean</goal>
							</goals>
						  </execution>
						</executions>
						<configuration>
						  <filesets>
							<fileset>
							  <directory>do_not_checkin/build</directory>
							  <includes>
								<include>**/*</include>
							  </includes>
							  <followSymlinks>false</followSymlinks>
							</fileset>
						  </filesets>
						</configuration>
					  </plugin>
		        </plugins>
            </build>
        </profile>
		
		<profile>   
			<id>js</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			 </activation>
			<properties>
				<sonar.branch>js</sonar.branch>
				<sonar.language>js</sonar.language>
				<phresco.source.directory>src/main/js</phresco.source.directory>
				<sonar.exclusions>**/lib/**</sonar.exclusions>
			 </properties> 
		</profile>
		
		<profile>   
			<id>java</id>
			<properties>
				<sonar.branch>java</sonar.branch>
				<sonar.language>java</sonar.language>
				<phresco.source.directory>src/main/java</phresco.source.directory>
				</properties> 
		</profile>
		
		<profile>   
			<id>web</id>
			<properties>
				<sonar.branch>web</sonar.branch>
				<sonar.language>web</sonar.language>
				<sonar.dynamicAnalysis>false</sonar.dynamicAnalysis>
				<phresco.source.directory>src/main/webapp</phresco.source.directory>
				</properties> 
		</profile>
		
    </profiles>

</project>
